<link rel='stylesheet' href='/public/css/bootstrap.min.css'>
<div class="page-header">
	<h1>Ajout de commentaire</h1>
</div>
<form method="post" action="added">
	<div class="input-group">
		<label for="pseudo">Pseudo</label>
		<input id="pseudo" type="text" name="comment[pseudo]" class="form-control" placeholder="Enter pseudo">
	</div>
	<br/>
	<div class="input-group">
		<label for="content">Content</label>
		<textarea id="content" name="comment[content]" class="form-control" placeholder="Enter a content for the comment..." ></textarea>
	</div>
	<br/>
	<button type="submit" class="btn btn-default">Add</button>
</form>
<script src="/public/css/bootstrap.min.js"></script>
